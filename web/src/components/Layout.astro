---
/**
 * Layout Component for azd-rest
 * Uses shared Layout/Header/Footer from @jongio/azd-web-core.
 */
import SharedLayout from '@jongio/azd-web-core/components/Layout.astro';
import SharedHeader from '@jongio/azd-web-core/components/Header.astro';
import SharedFooter from '@jongio/azd-web-core/components/Footer.astro';
import SuiteNav from '@jongio/azd-web-core/components/SuiteNav.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'azd rest - Make authenticated Azure REST API calls with automatic OAuth scope detection, retry logic, and response formatting.',
} = Astro.props;

const base = import.meta.env.BASE_URL;
const siteUrl = 'https://jongio.github.io';
const currentUrl = `${siteUrl}${Astro.url.pathname}`;
const ogImage = `${siteUrl}${base}og-image.png`;
const fullTitle = title === 'Home' ? 'azd rest | Authenticated Azure REST API Calls' : `${title} | azd rest`;
const githubUrl = 'https://github.com/jongio/azd-rest';
const hubUrl = 'https://jongio.github.io/azd-extensions/';

const navLinks = [
  { label: 'Getting Started', href: `${base}getting-started` },
  { label: 'Examples', href: `${base}examples` },
  { label: 'Reference', href: `${base}reference` },
];
---

<SharedLayout
  title={fullTitle}
  description={description}
  extensionName="rest"
  canonicalUrl={currentUrl}
  ogImage={ogImage}
  publishedDate="2025-11-08T09:56:31Z"
>
  <Fragment slot="head">
    <meta property="og:site_name" content="azd rest" />
  </Fragment>

  <SuiteNav currentExtension="rest" hubUrl={hubUrl} />
  <SharedHeader
    extensionName="rest"
    navLinks={navLinks}
    githubUrl={githubUrl}
    hubUrl={hubUrl}
  />

  <main class="mx-auto max-w-[1280px] w-full flex-1">
    <slot />
  </main>

  <SharedFooter extensionName="rest" githubUrl={githubUrl} hubUrl={hubUrl} />
</SharedLayout>
